@using OdeToFood.Core
@model Restaurant // allows us to just say Model.(property)--> 

<div class="card card-columns">
    <div class="card-header">
        <h3>@Model.Name</h3> <!-- same as Restaurant.Name-->
    </div>
    <div>
        <div class="card-body">
            <span>Location: @Model.Location</span><br />
            <span>Cuisine: @Model.Cuisine</span>
        </div>
        <div class="card-footer">
            <a class="btn btn-lg"
               asp-page="./Detail" asp-route-restaurantId="@Model.Id">
                <!-- with asp-route you pass the parameter you want directly in the asp-route codeline-->
                <i class="fas fa-search-plus"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Edit" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-edit"></i>
            </a>
            <a class="btn btn-lg"
               asp-page="./Delete" asp-route-restaurantId="@Model.Id">
                <i class="fas fa-trash-alt"></i>
            </a>
            <br />
        </div>
    </div>
</div>
